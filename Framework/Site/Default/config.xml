<?xml version="1.0" ?>
<framework>
    <!-- set to 1 to send debug info to logFile -->
    <debug>0</debug>
    <!-- Use ADODBLite w/ the PEAR module -->
    <db>
        <dsn>mysql://root:@localhost/test#pear</dsn>
        <type>ADODB</type>
        <options>
            <adodbDir>adodb5</adodbDir>
        </options>
    </db>
    <!-- inactivity timeout - in seconds -->
    <inactiveTimeout>600</inactiveTimeout>
    <maxPerPage>50</maxPerPage>
    <supportEmail>support@example.com</supportEmail>
    <supportName>DNS Team</supportName>
    <logFile>/tmp/vegadns.log</logFile>
    <user>
        <userClass>VegaDNS</userClass>
        <userTable>accounts</userTable>
        <userField>user_id</userField>
        <defaultUser>1</defaultUser>
        <userLocaleDir>Framework/Site/Default/locale</userLocaleDir>
    </user>
    <!-- See VegaDNS_Auth_ACL -->
    <acl>
        <!-- Domains -->
        <class name="Framework_Module_Domains_Add"
               event="__default"
               accessLevel="domain_create" />
        <class name="Framework_Module_Domains_Add"
               event="addNow"
               accessLevel="domain_create" />
        <class name="Framework_Module_Domains_Add"
               event="addNow"
               accessLevel="domain_create" />
        <class name="Framework_Module_Domains_Delete"
               event="__default"
               accessLevel="domain_delete" />
        <class name="Framework_Module_Domains_Delete"
               event="deleteNow"
               accessLevel="domain_delete" />
    </acl>
</framework>
